{
  "language": "ts",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "monorepo": true,
  "root": ".",
  "compilerOptions": {
    "webpack": true,
    "tsConfigPath": "tsconfig.json"
  },
  "projects": {
    "my-app": {
      "type": "application",
      "root": ".",
      "entryFile": "main",
      "sourceRoot": "src",
      "compilerOptions": {
        "webpack": true,
        "tsConfigPath": "tsconfig.json",
        "webpackConfigPath": "webpack.config.js"
      }
    }
  }
}